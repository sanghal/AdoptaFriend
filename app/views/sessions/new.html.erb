<h1>Log In</h1>

<p>Don't have an account? <%= link_to 'Sign Up', new_user_path %>.</p>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :email %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>

	<div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <br>

  <div class="actions"><%= submit_tag "Log In", class: "btn btn-default"%></div>
<% end %>



